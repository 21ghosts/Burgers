<div class="container">

    <div class="row">
        <div class="col-lg-12 center">
            <h2>Eat The Burger</h2>
            <p></p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <hr>
            <h3>Available burgers!</h3>
            <ul>
                {{#each burger}}
                  {{#unless this.devoured}}
                  <li>
                      {{this.id}}
                      {{this.burgers_name}}

                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button class="btn-primary" type="submit">Devour It!</button>
                    </form>

                  </li>
                 {{/unless}} {{/each}}
            </ul>
        </div>

        <div class="col-lg-6">
            <h2>Eaten burgers!</h2>
            
            {{#each burgers}} {{#if this.devoured}}
            <li>
                {{this.id}} {{this.burger_name}}
            
            </li>
            {{/if}} {{/each}}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <h3>Add your burger to the list.</h3>
            <form class="update-create" action="/" method="POST">
            
                <div class="form-group">
                    <p>Enter the burger you want and click the Submit.</p>
                    <input type="text" id="ca" name="burger_name">
                </div>
            
                <button class="btn-primary" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>